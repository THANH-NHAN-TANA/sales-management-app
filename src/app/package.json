{
  "name": "sales-management-app",
  "version": "1.0.0",
  "description": "Sales Management System with Web Interface and automated CI/CD pipeline",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon main.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo \"Build completed\"",
    "setup": "npm install && node setup.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docker:build": "docker build -t sales-management-app .",
    "docker:run": "docker run -p 3000:3000 sales-management-app",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs",
    "health": "curl http://localhost:3000/health"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.18.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "nodemailer": "^6.10.1",
    "path": "^0.12.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "sales",
    "management",
    "api",
    "web-interface",
    "nodejs",
    "mysql",
    "docker",
    "aws",
    "ecs",
    "cicd",
    "jenkins",
    "authentication",
    "otp",
    "password-reset",
    "email-verification"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/THANH-NHAN-TANA/sales-management-app.git"
  },
  "bugs": {
    "url": "https://github.com/THANH-NHAN-TANA/sales-management-app/issues"
  },
  "homepage": "https://github.com/THANH-NHAN-TANA/sales-management-app#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  }
}
